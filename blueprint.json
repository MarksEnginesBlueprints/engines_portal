{
  "schema": {
    "type": "app_blueprint",
    "version": {
      "major": 0,
      "minor": 1
    },
    "origin": "Engines Developer Studio 0.2"
  },
  "metadata": {
    "blueprint": {
      "version": {
        "major": 0,
        "minor": 0,
        "level": "alpha",
        "patch": 0
      }
    },
    "timestamp": "2018-07-14T12:42:55+10:00"
  },
  "software": {
    "base": {
      "name": "eportal",
      "framework": "sinatra",
      "deployment_type": "web",
      "http_protocol": "https_and_http",
      "framework_port_override": 3000,
      "continuous_deployment": true,
      "memory": {
        "required": 96,
        "recommended": 128
      }
    },
    "scripts": {
      "start": {
        "language": "sh",
        "content": "#!/bin/bash\r\n\r\ncd /home/app\r\ngit pull\r\nbundle --standalone\r\nbundle exec thin start"
      },
      "install": {
        "language": "sh",
        "content": "#!/bin/bash\r\n\r\nmkdir /home/app/public\r\ntouch   /home/app/public/r"
      }
    },
    "installed_packages": [
      {
        "name": "engines_portal",
        "download_type": "git",
        "command_options": "--branch $branch",
        "source_url": "https://github.com/lachdoug/engines_portal.git",
        "destination": "./",
        "extraction_command": "git ",
        "path_to_extracted": "engines_portal"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "service_name": "data",
          "volume_src": "",
          "engine_path": "",
          "permissions": "rw",
          "user": "_Engines_Builder(data_uid)",
          "group": "_Engines_Builder(data_gid)"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/mysql",
        "variables": {
          "database_name": "_Engines_Builder(engine_name)",
          "database_host": "_Engines_System(mysql_host)",
          "db_username": "_Engines_Builder(engine_name)",
          "db_password": "_Engines_System(random(10))",
          "collation": "utf8_general_ci",
          "full_access": "false"
        }
      }
    ],
    "environment_variables": [
      {
        "name": "ENGINES_USER_PORTAL_SYSTEM_IP",
        "value": "172.17.0.1",
        "mandatory": true,
        "ask_at_build_time": true,
        "input": {
          "type": "string",
          "label": "Engines System"
        }
      },
      {
        "name": "RACK_ENV",
        "value": "production",
        "input": {
          "type": "boolean"
        }
      },
      {
        "name": "ENGINES_USER_PORTAL_USER_INACTIVITY_TIMEOUT",
        "value": "30",
        "input": {
          "type": "integer"
        }
      },
      {
        "name": "branch",
        "value": "master",
        "mandatory": true,
        "immutable": true,
        "input": {
          "type": "string"
        }
      }
    ],
    "template_files": [
      {
        "path": "app/config/mail.yml",
        "content": "production:\r\n  email_delivery:\r\n  delivery_method: smtp\r\n  smtp_settings:\r\n   address: _Engines_System(smtp_host)\r\n   port: 25\r\n   domain: _Engines_System(default_domain)\r\n   enable_starttls_auto : false\r\n   attachments_storage_path: /tmp\r\n"
      }
    ],
    "file_write_permissions": [
      {
        "path": "/home/app",
        "recursive": true
      }
    ],
    "persistent_directories": [
      {
        "path": "/home/app/data",
        "volume_name": "data"
      }
    ],
    "framework_specific": {
      "rake_tasks": [
        {
          "action": "db:migrate",
          "always_run": true
        }
      ]
    }
  }
}
